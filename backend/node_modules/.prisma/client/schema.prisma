generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Add your models here
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  gender    String?
  dob       DateTime?
  country   String?
  height    Float? // in cm
  weight    Float? // in kg
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
